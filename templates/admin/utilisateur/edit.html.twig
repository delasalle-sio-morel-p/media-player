    </li>
{% endblock %}

{% block main %}

    <h2>Modifier Utilisateur :</h2>

    {{ form_start(userForm) }}

    <div>
        {{ form_row(userForm.email) }}
    </div>
    <div>
        {{ form_row(userForm.firstname) }}
    </div>
    <div>
        {{ form_row(userForm.lastname) }}
    </div>
    <div>
        {{ form_row(userForm.username) }}
    </div>
    <div>
        {{ form_row(userForm.password) }}
    </div>


    <div>
        <br>
        <div class="btn-group">
            <button class="btn btn-lg btn-light" type="submit">Enregistrer</button>
            <button class="btn btn-lg btn-light" ><a href="{{ path("listUsers") }}">Retour Ã  la liste</a></button>

        </div>
    </div>

    {{ form_end(userForm) }}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
{% endblock %}

